from decimal import Decimal, DecimalException

print("Dieses Programm berechnet die Fahrtkosten")
print("Der Tankrabatt läuft vom 01. Juni 2022 bis zum 31. Juli 2022 und senkt die Energie auf Kraftstoffe bei Benzin um 35,2 Cent und bei Diesel um 16,7 Cent den Liter!!!")
print("Die aktuellen durchschnittlichen Benzinpreise in den 15 größten deutschen Städten liegen bei: Berlin, Hamburg, München, Köln, Frankfurt am Main, Stuttgart, Düsseldorf, Leipzig, Dortmund, Essen, Bremen, Dresden, Hannover, Nürnberg, Duisburg  ")
print("Die aktuellen durchschnittlichen Dieselpreise in den 15 größten deutschen Städten liegen bei: Berlin, Hamburg, München, Köln, Frankfurt am Main, Stuttgart, Düsseldorf, Leipzig, Dortmund, Essen, Bremen, Dresden, Hannover, Nürnberg, Duisburg  ")

while True:
    try:
        sprit_preis = Decimal(input("Bitte gebe die aktuellen Spritpreis [EURO] ein: "))
        gefahrene_km = Decimal(input("Bitte gebe die gefahrenen Kilometer ein: "))
        hin_rueckfahrt = int(input("Bitte gebe für eine einfach gefahrene Strecke (1) und für Hin- und Rückfahrt (2) ein: "))                            # Eingabe außer 1 und 2 muss unbedingt abgefangen werden
        verbrauch = Decimal(input("Bitte gebe den Verbrauch [Liter] ein:"))                                                                              # Verbrauch auf 100 km oder Verbrauch Gesamt | Wie wollen wir es umsetzen?
        anzahl_personen = input("Bitte gebe die Anzahl der Mitfahrer ein:")
        anzahl_personen = Decimal(anzahl_personen) + 1
        pauschale_km = Decimal(input("Bitte gebe die KM-Pauschale (für z.B. Wertverlust, Verschleiß, Reparaturkosten, Versicherung, Steuern) ein:"))
        gebuehren_km = Decimal(input("Bitte gebe die Gebühren [EURO] (für z.B. Maut, Vingette, Parken) ein:"))
        break
    except (ValueError, DecimalException):
        print("Bitte geben Sie die Variablen in dezimaler Schreibweise an Beispiele 1.98 [Euro], 290.5 [KM], 1 [Mitfahrer], 7.8 [Liter]")
    else: print("Die Eingabe war erfolgreich")

# Ermittlung der Fahrtkosten für die einfache Wegstrecke
fahrtkosten = Decimal(sprit_preis * verbrauch * (gefahrene_km/100))
print("Die Fahrtkosten für die einfache Wegstrecke belaufen sich auf: ", round(fahrtkosten, 2) ," Euro")

# Ermittlung der Fahrtkosten für die doppelte Wegstrecke
fahrtkosten = Decimal(sprit_preis * verbrauch * (gefahrene_km/100) * hin_rueckfahrt)
print("Die Fahrtkosten für die doppelte Wegstrecke belaufen sich auf: ", round(fahrtkosten, 2) ," Euro")

# Ermittlung der Fahrtkosten pro Person (einfache Wegstrecke)
fahrtkosten = Decimal(sprit_preis * verbrauch * (gefahrene_km/100) / anzahl_personen)
print("Die Fahrtkosten pro Person für die einfache Wegstrecke belaufen sich auf: ", round(fahrtkosten, 2) ," Euro")

# Ermittlung der Fahrtkosten pro Person (doppelte Wegstrecke)
fahrtkosten = Decimal(sprit_preis * verbrauch * (gefahrene_km/100) * hin_rueckfahrt  / anzahl_personen)
print("Die Fahrtkosten pro Person für die doppelte Wegstrecke belaufen sich auf: ", round(fahrtkosten, 2) ," Euro")

# Ermittlung Fahrtkosten Gesamt
fahrtkosten = Decimal(((sprit_preis * verbrauch * (gefahrene_km/100) * hin_rueckfahrt)+(pauschale_km * gefahrene_km* hin_rueckfahrt)+ gebuehren_km))
print("Die Fahrtkosten für die Gesamtstrecke inkl. KM-Pauschale und Gebühren belaufen sich auf: ", round(fahrtkosten, 2) ," Euro")

# Ermittlung Fahrtkosten Gesamt pro Person
fahrtkosten = Decimal(((sprit_preis * verbrauch * (gefahrene_km/100) * hin_rueckfahrt)+(pauschale_km * gefahrene_km* hin_rueckfahrt)+ gebuehren_km) / anzahl_personen)
print("Die Fahrtkosten pro Person für die Gesamtstrecke inkl. KM-Pauschale und Gebühren belaufen sich auf: ", round(fahrtkosten, 2) ," Euro")




